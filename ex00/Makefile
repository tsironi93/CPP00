DEPS		= $(OBJ:.o=.d)

#SRC_BONUS   = $(wildcard $(SRC_BONUS_DIR)/*.cpp)
#OBJ_BONUS   = $(patsubst $(SRC_BONUS_DIR)/%.cpp, $(OBJ_BONUS_DIR)/%.o, $(SRC_BONUS))

