NAME        = account
#BONUS_NAME  = _bonus

CXX         = c++
CXXFLAGS    = -Wall -Wextra -Werror -O2 -g --MMD #-fsanitize=address -fno-omit-frame-pointer

SRC_DIR         = .
OBJ_DIR         = src_o
#SRC_BONUS_DIR   = src_bonus
